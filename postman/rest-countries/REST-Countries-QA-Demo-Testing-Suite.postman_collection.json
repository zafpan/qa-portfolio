  "item": [
    {
      "name": "GET All Countries",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Basic response assertions",
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
              "pm.test(\"Response time under 1200ms\", () => pm.expect(pm.response.responseTime).to.be.below(1200));",
              "pm.test(\"Content-Type is JSON\", () => {",
              "    pm.response.to.have.header(\"Content-Type\");",
              "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
              "});",
              "",
              "// Check if the response body contains the expected data",
              "const allCountriesData = pm.response.json();",
              "pm.test(\"Returns an array with at least 200 countries\", () => {",
              "    pm.expect(allCountriesData).to.be.an(\"array\");",
              "    pm.expect(allCountriesData.length).to.be.above(200);",
              "});",
              "pm.test(\"Country objects have expected keys\", () => {",
              "    const c = allCountriesData[0];",
              "    pm.expect(c).to.have.property(\"name\");",
              "    pm.expect(c.name).to.have.property(\"common\");",
              "    pm.expect(c).to.have.property(\"cca2\");",
              "    pm.expect(c).to.have.property(\"region\");",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [""],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/all?fields=name,cca2,region",
          "host": ["{{base_url}}"],
          "path": ["all"],
          "query": [
            {
              "key": "fields",
              "value": "name,cca2,region"
            }
          ]
        }
      },
      "response": []
    },
