    {
      "name": "EDGE: Case-Insensitive Name",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Set country_name env var, from the CSV for each iteration (if present)",
              "const countryFromData = pm.iterationData.get(\"country_name\");",
              "if (countryFromData) { pm.environment.set(\"country_name\", countryFromData); }",
              "",
              "// Randomize case to assert case-insensitive handling",
              "const cn_original = pm.environment.get('country_name');",
              "const funky = cn_original",
              "    .split(\"\")",
              "    .map((ch, i) => (i % 2 ? ch.toUpperCase() : ch.toLowerCase()))",
              "    .join(\"\");",
              "",
              "// Set it to a local variable so it affects only this request",
              "pm.variables.set('country_name_funky', funky);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Basic response assertions",
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
              "pm.test(\"Response time under 1200ms\", () => pm.expect(pm.response.responseTime).to.be.below(1200));",
              "pm.test(\"Content-Type is JSON\", () => {",
              "    pm.response.to.have.header(\"Content-Type\");",
              "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
              "});",
              "",
              "// Check if the response body contains the expected data",
              "const caseInsensitiveData = pm.response.json();",
              "pm.test(\"Country name is provided (CSV or env)\", () => {",
              "  const cn = pm.environment.get(\"country_name\");",
              "  pm.expect(cn, \"country_name env var is empty\").to.be.a(\"string\").and.not.be.empty;",
              "});",
              "",
              "const expected = pm.environment.get(\"country_name\");",
              "pm.test(\"Name lookup remains correct despite input casing\", () => {",
              "    pm.expect(caseInsensitiveData[0].name.common).to.equal(expected);",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/name/{{country_name_funky}}?fullText=true",
          "host": ["{{base_url}}"],
          "path": ["name", "{{country_name_funky}}"],
          "query": [
            {
              "key": "fullText",
              "value": "true"
            }
          ]
        }
      },
